<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/misc_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Gaming Mode -->
    <Preference
        android:key="gaming_mode"
        android:icon="@drawable/ic_gaming"
        android:title="@string/gaming_mode_title"
        android:summary="@string/gaming_mode_summary"
        android:fragment="com.malluos.settings.fragments.misc.GamingMode"/>

    <com.malluos.settings.preferences.SecureSettingSwitchPreference
        android:key="hardware_keys_disable"
        android:icon="@drawable/ic_buttons"
        android:title="@string/hwkeys_disabled_title"
        android:summary="@string/hwkeys_disabled_summary" />

    <!-- Adaptive Playback -->
    <com.malluos.settings.preferences.SystemSettingSwitchPreference
        android:key="adaptive_playback_enabled"
        android:icon="@drawable/ic_settings_sound"
        android:title="@string/adaptive_playback_title"
        android:summary="@string/adaptive_playback_summary"
        android:defaultValue="false" />

    <com.malluos.settings.preferences.SystemSettingSeekBarPreference
        android:key="adaptive_playback_timeout"
        android:icon="@drawable/ic_settings_sound"
        android:title="@string/adaptive_playback_timeout_title"
        android:defaultValue="30"
        android:max="600"
        settings:min="10"
        settings:interval="10"
        settings:units="@string/unit_seconds"
        android:dependency="adaptive_playback_enabled" />

    <Preference
        android:key="pulse_settings"
        android:icon="@drawable/ic_pulse"
        android:title="@string/pulse_settings"
        android:summary="@string/pulse_settings_summary"
        android:fragment="com.malluos.settings.fragments.misc.PulseSettings" />

    <!-- Display cutout options -->
    <Preference
        android:key="display_cutout_force_fullscreen_settings"
        android:icon="@drawable/ic_cutout"
        android:title="@string/display_cutout_force_fullscreen_title"
        android:summary="@string/display_cutout_force_fullscreen_summary"
        android:fragment="com.malluos.settings.fragments.ui.DisplayCutoutForceFullscreenSettings" />

</PreferenceScreen>
